{
  "schemaVersion": 1,
  "id": "frex",
  "version": "${version}",
  "name": "FREX",
  "description": "Advanced rendering features for Minecraft mods",
  "authors": [
    "Grondag"
  ],
  "contact": {
    "homepage": "https://minecraft.curseforge.com/projects/frex",
    "issues": "https://github.com/vram-guild/frex/issues",
    "sources": "https://github.com/vram-guild/frex"
  },
  "license": "LGPL-3.0",
  "icon": "assets/frex/frex_icon.png",
  "environment": "client",
  "mixins": [
    "frex.common.json",
    "frex.fabric.json",
    "frex.pastel.json",
    "frex.fabricevents.json"
  ],
  "entrypoints": {
    "client": [ "io.vram.frex.fabric.FrexMod" ]
  },
  "depends": {
    "fabricloader": ">=0.14.19",
    "minecraft": ">=1.18.2",
    "java": ">=17"
  },
  "custom": {
  	"fabric-renderer-api-v1:contains_renderer": true,
    "modmenu": {
        "badges": [ "library" ]
    }
  },
  "accessWidener": "frex.accesswidener"
}
